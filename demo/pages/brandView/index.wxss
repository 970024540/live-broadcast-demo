page{
  background-color: #f7f7f7;
  padding-top: 90rpx;
  height: 100vh;
}
.goods-scroll-cover{
  width: 240rpx;
  height: 240rpx;
}
.goods-list-item-cover{
  width:320rpx;
  height:320rpx;
}
.search-fixed{
  position: fixed;
  top:0;
  left:0;
  z-index:999;
}
.goods-scroll-view_H{
  height: 320rpx;
}
.recommand-title{
  color:rgb(193, 147, 81);
}
.actived-ticket-icon{
  position: absolute;
  top:-10rpx;
  right: -50rpx;
  font-size: 120rpx;
}
.x-countdown{
  color:#e4393c;
  line-height: 1;
}
.padding-r-5{
  padding-right: 5rpx;
}
.padding-l-5{
  padding-left: 5rpx;
}
.icon-play{
  position: absolute;
  top:35%;
  left: 40%;
  font-size: 120rpx;
  color:rgba(0, 0, 0, 0.4);
}
.x-modal{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  background-color: rgba(0,0,0,0.2);
  z-index:99;
}
.modal-close-btn{
  position: absolute;
  top:0;
  right: 10rpx;
  width:70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #e4393c;
  color:#fff;
}
.flex-1-3 {
  width: 33%;
  flex: 0 0 33%;
}
.flex-1-2 {
  width: 50%;
  flex: 0 0 50%;
}