.modal-mask {
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  background-color: rgba(0,0,0,0.3);
  z-index: 999;
}
.tc {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
}

.tcr {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  margin: 10rpx 0 0 10rpx;
}
.modal-button {
  padding: 10rpx 30rpx;
}
.button-circle {
  border-radius: 28rpx;
}
.button-type-primary {
  background: #2d8cf0;
  color: #fff;
}
.button-type-ghost {
  background: transparent;
}
.button-type-dashed {
  background: transparent;
  border: 1px dashed #eee;
}
.button-type-text {
  background: transparent;
  border: none;
}
.button-type-info {
  background: #2db7f5;
  color: #fff;
}
.button-type-success {
  background: #19be6b;
  color: #fff;
}
.button-type-warning {
  background: #f90;
  color: #fff;
}
.button-type-error {
  background: #ed3f14;
  color: #fff;
}