.banner-price {
  position: absolute;
  bottom: -28rpx;
  left: -24rpx;
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  background: linear-gradient(120deg, #ff458a, #fe204e);
  z-index: 1;
}
.banner-price-inner {
  border: 1rpx solid #eee;
  border-radius: 50%;
  background: transparent;
}
.price-btn {
  color: #e42618;
  background-color: #fdbbbc;
  border-radius: 30rpx;
  font-weight: 600;
}
.banner-bottom {
  position: absolute;
  background: transparent;
  bottom: 0;
  left: 100rpx;
  height: 120rpx;
  right: 0;
  padding-left: 100rpx;
  background: linear-gradient(90deg, #ff458a, #fe1c43);
}
.banner-swiper {
  background: linear-gradient(30deg, #fe307b, #fe1c42);
  margin-bottom: 80rpx;
  padding-bottom: 120rpx;
}

.line-height-1 {
  line-height: 1;
}
.banner-timer {
  background-color: #000000;
  width: 48rpx;
  display: inline-block;
  margin: 0 4rpx;
}
.border-r-3 {
  border-radius: 6rpx;
}