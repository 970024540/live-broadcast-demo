.user-modal{
 position: fixed;
 top:30%;
 z-index: 1000;
 width: 70vw;
 margin:0 auto;
 left: 0;
 right: 0;
 animation: mymove .3s;
}
.btn {
  width: 40vw;
  padding: 15rpx 20rpx;
}
.mask{
  position: fixed;
  top:0;
  left:0;
  bottom: 0;
  right:0;
  background:rgba(0, 0, 0, 0.7);
  z-index:10;
}

.guide-modal {
  position: fixed;
  top: 0;
  right: 10px;
  z-index: 1000;
  width: 45vw;
  animation: mymove .3s;
}
.top-icon {
  position: absolute;
  right: 55px;
  width:0;
  height:0;
  border-left:15rpx solid transparent;
  border-right:15rpx solid transparent;
  border-bottom:30rpx solid white;
}
.padding-l-20 {
  padding-left: 20rpx;
}
@keyframes mymove {
  from {
    opacity: 0;
    transform: translate3d(0, 20px, 0);
  }
  to {
    opacity: 1;
  }
}